<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StepMobileActivity"
    android:background="@color/bg">

    <View
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:background="@drawable/kembali_ke_menu"
        android:onClick="toTopupMenu"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:background="@drawable/phone"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:background="@drawable/step_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="1.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_pink_bar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.335"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bank"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.335"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Banking"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintVertical_bias="0.335"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>